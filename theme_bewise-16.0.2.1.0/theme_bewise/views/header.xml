<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="custom_header" inherit_id="website.layout" name="Custom Header">
        <xpath expr="//header" position="replace">
            <header class="header-sticky">
               <nav class="header-navigation">
                <div style="background-color: #202529; position: fixed;" class="top_menu_container bg-epsilon navbar-bg">
                    <ul style="display: flex; list-style: none; justify-content: space-between; max-width: 75rem; margin-left: auto; margin-right: auto;">
                        <li>
                            <a role="menuitem">Work</a>
                        </li>
                        <li>
                            <a role="menuitem">Insights</a>
                        </li>
                        <li>
                            <a role="menuitem">About</a>
                        </li>
                        <li>
                            <a href="https://www.wizeline.com/" title="Academy">
                               <img class="header-logo" src="/theme_bewise/static/src/img/Wordmark_digital-white.png"/>
                            </a>
                        </li>
                        <li>
                            <a role="menuitem">Careers</a>
                        </li>
                        <li>
                            <a role="menuitem">Academy</a>
                        </li>
                        <li>
                            <a role="menuitem">Contact</a>
                        </li>
                    </ul>
                    <div style="display: flex; justify-content: space-between">
                        <div>Academy logo</div>
                        <nav>
                            <ul style="display: flex; list-style: none; color: black">
                                <li>
                                    <a role="menuitem">About</a>
                                </li>
                                <li>
                                    <a role="menuitem">Explore</a>
                                </li>
                                <li>
                                    <a role="menuitem">Start Learning</a>
                                </li>
                                <li>
                                    <button role="menuitem" string="Join Our Mailing List"/>
                                </li>
                            </ul>
                        </nav>
                    </div>
                </div>
               </nav>
            </header>
        </xpath>
    </template>
</odoo>