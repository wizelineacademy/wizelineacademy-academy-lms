<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="courses_nav_header" name="Courses nav header" inherit_id="website_slides.course_nav">
        <xpath expr="*[hasclass('o_wslides_course_nav')]" position="replace">
            <div class="course_nav_header_custom">
                <div class="container">
                    <div class="row align-items-center justify-content-between">
                        <!-- Desktop Mode -->
                        <nav aria-label="breadcrumb" class="col-md-8 d-none d-md-flex">
                            <ol class="breadcrumb flex-nowrap bg-transparent mb-0 ps-0 py-0 overflow-hidden">
                                <li class="breadcrumb-item flex-shrink-0">
                                    <a href="/slides" title="Courses">
                                        <i class="oi oi-arrow-left" aria-hidden="true"></i> Go back to all courses</a>
                                </li>
                            </ol>
                        </nav>

                        <!-- Mobile Mode -->
                        <div class="col d-md-none py-1">
                            <div class=" w-100 position-relative" role="group" aria-label="Mobile sub-nav">
                                <div class=" w-100">
                                    <a class=" text-white" href="/slides" aria-expanded="false">
                                        <i class="oi oi-arrow-left" aria-hidden="true"></i> Go back to all courses</a>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </xpath>
    </template>

    <template id="custom_rating_widget" name="Custom rating widget" inherit_id="portal_rating.rating_widget_stars_static">
        <xpath expr="//*[hasclass('o_website_rating_static')]" position="attributes">
            <attribute name="class" add="custom_course_rating" separator=" "/>
        </xpath>
    </template>

    <template id="custom_enroll_widget" name="Custom enroll widget" inherit_id="website_slides.course_join" priority="22">
        <xpath expr="//a[@t-else='' and hasclass('o_wslides_js_course_join_link')]" position="replace">
            <a t-else="" role="button" class="btn enroll-btn o_wslides_js_course_join_link" title="Start Course" aria-label="Start Course" href="#" t-att-data-channel-id="channel.id" t-att-data-channel-enroll="channel.enroll" t-att-data-invite-hash="invite_hash" t-att-data-invite-partner-id="invite_partner_id" t-att-data-invite-preview="invite_preview" t-att-data-is-member-or-invited="channel.is_member or channel.is_member_invited" t-att-data-is-partner-without-user="is_partner_without_user">
                <span class="cta-title">
                    <t t-if="channel.channel_type == 'documentation'">Start this Course</t>
                    <t t-else="">Enroll <i class="oi oi-chevron-right" />
                    </t>
                </span>
            </a>
        </xpath>
    </template>

    <template id="custom_course_sidebar" name="Custom course sidebar template">
        <div class="custom_course_sidebar">
            <div class="info_course_title">Type</div>
            <div class="info_course_description text-capitalize">
                <span t-if="channel.channel_type" t-esc="channel.channel_type" />
            </div>
            <div t-if="channel.skill_names">
                <div class="info_course_title">Skills</div>
                <div class="info_course_description text-capitalize" t-esc="channel.skill_names">
                </div>
            </div>
            <div t-if="channel.total_time">
                <div class="info_course_title">Length</div>
                <div class="info_course_description text-capitalize">
                    <span t-esc="channel.total_time" t-options="{'widget': 'duration', 'unit': 'hour', 'round': 'minute'}"/>
                </div>
            </div>
            <div t-if="channel.language_name">
                <div class="info_course_title">Language</div>
                <div class="info_course_description text-capitalize" t-esc="channel.language_name"/>
            </div>
            <div class="mt-3 d-grid">
                <t t-call="website_slides.course_join"/>
            </div>
        </div>


        <div class="px-2 mb-5" id="display_review_div">
            <div class="row">
                <t t-call="portal_rating.rating_widget_stars_static" />
            </div>
            <div class="share_experience row">
                <div class="common_text">
                    <div class="title">Share you experience with us!</div>
                </div>
                <div class="common_text">
                    <div class="description">We'd love to hear what you think! Your feedback helps us improve and guide future learners.</div>
                </div>
                <div class="add_review">
                    <div class="review_text">Add Review</div>
                </div>
            </div>
        </div>
    </template>

</odoo>