<?xmd version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="course_language_edit" model="ir.ui.view">
            <field name="name">slide.channel.view.form.language.course.edit</field>
            <field name="model">slide.channel</field>
            <field name="inherit_id" ref="website_slides.view_slide_channel_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='skill_ids']" position="after">
                    <div>
                        <label for="language_id" string="Language"/>
                        <br></br>
                        <field name="language_id" options="{'no_create': True}" placeholder="Select a Language"/>
                    </div>
                </xpath>
            </field>
        </record>
    </data>

</odoo>
