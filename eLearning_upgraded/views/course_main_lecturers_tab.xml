<?xmd version="1.0" encoding="utf-8"?>
<odoo><data>  

<template id="course_main_lecturers_tab" name="Lecturers Tab" inherit_id="website_slides.course_main">
    <xpath expr="//ul[@id='profile_extra_info_tablist']" position="inside">
        <li class="nav-item" role="presentation">
            <a t-att-class="'nav-link %s' % ('active' if active_tab == 'lecturers' else '')" id="lecturers-tab" data-bs-toggle="pill" href="#lecturers" role="tab" aria-controls="lecturers" t-att-aria-selected="'true' if active_tab == 'lecturers' else 'false'">
                Lecturers
            </a>
        </li>
    </xpath>

    <xpath expr="//div[@id='courseMainTabContent']" position="inside">
        <!-- Lecturers Section -->
        <div t-att-class="'tab-pane fade %s' % ('show active' if active_tab == 'lecturers' else '')" id="lecturers" role="tabpanel" aria-labelledby="lecturers-tab">
            <div id="lecturers_section">
                <div class="mb-2">
                    <div class="col mx-n2">

                        <div class="card mb-4 w-100 p-4 px-md-2 py-md-3 shadow">
                            <div class="row g-0">
                                <div class="col-md-3">
                                    <div class="d-flex align-items-center justify-content-center">
                                        <img src="https://thispersondoesnotexist.com" alt="Test Image" class="img-fluid mt-3 mb-3 rounded rounded-3 w-50 w-md-40" style="object-fit:cover;"/>
                                    </div>
                                    <h3 class="text-center mb-4 mb-md-2">Ms. Lara Croft</h3>
                                    <p class="mb-5 mb-md-2 text-center" style="font-size:16px;">Professor of Archeology</p>
                                </div>
                                <div class="col-md-8 d-flex align-items-center justify-content-start">
                                    <p style="font-size:16px;">Ms. Lara Croft is a renowned archeologist and adventurer. She has been on numerous expeditions and has discovered many ancient artifacts.</p>
                                </div>
                            </div>
                        </div>
            
                    </div>
                </div>
            </div>
        </div>
    </xpath>
</template>

<!-- Individual Lecturer Card -->
<template id="lecturer_card" name="Lecturer Card">

</template>

</data></odoo>