<?xmd version="1.0" encoding="utf-8"?>
<odoo><data>
    <template id="course_main_about" name="About Course" inherit_id="website_slides.course_main">
        <xpath expr="//div[@id='courseMainTabContent']/div[@id='home']/*[1]" position="before">
            <div t-if="not is_html_empty(channel.who_should_take)" class="mb-4">
                <h3 style="font-weight:bold;">Who Should Take This Course?</h3>
                <div class="oe_no_empty" t-field="channel.who_should_take" t-options="{'widget': 'html'}"/>
            </div>
        </xpath>
    </template>

    <record id="who_should_take_course_edit" model="ir.ui.view">
        <field name="name">slide.channel.view.form.who.should.take.course.edit</field>
        <field name="model">slide.channel</field>
        <field name="inherit_id" ref="website_slides.view_slide_channel_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='description']" position="after">
                <page name="who_should_take_course" string="Who should take this course">
                    <field name="who_should_take" widget="html" nolabel="1" />
                </page>
            </xpath>
        </field>
    </record>
</data></odoo>