<?xmd version="1.0" encoding="utf-8"?>
<odoo><data>
    <record id="assign_lecturers" model="ir.ui.view">
        <field name="name">slide.channel.view.form.assign.lecturers</field>
        <field name="model">slide.channel</field>
        <field name="inherit_id" ref="website_slides.view_slide_channel_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='options']" position="after">
                <page name="assign_lecturers" string="Lecturers">
                        <group>
                            <field name="lecturers" domain="[('is_lecturer', '=', True)]">
                                <tree>
                                    <field name="name"/>
                                    <field name="email"/>
                                    <field name="function"/>
                                </tree>
                            </field>
                        </group>
                </page>
            </xpath>
        </field>
    </record>
</data></odoo>